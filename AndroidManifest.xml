<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionName="0.3"
	android:versionCode="3" package="org.ua2.guantanamo.gui">
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-sdk android:minSdkVersion="4" />
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:debuggable="true" android:allowClearUserData="true">
		<activity android:label="@string/app_name" android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:label="@string/app_name" android:name=".BannerActivity"></activity>
		<activity android:label="@string/app_name" android:name=".MessagePostActivity"></activity>
		<activity android:label="@string/app_name" android:name=".MessageViewActivity"></activity>
		<activity android:label="@string/app_name" android:name=".SettingsActivity"></activity>
		<activity android:name=".FolderActivity"></activity>
		<activity android:name=".PageActivity"></activity>
	</application>
</manifest>
